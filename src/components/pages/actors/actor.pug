div.container
    div.row
        div.avatar.col-1-3(id="backProfileLink")
            img(src=avatar)
        div.col-2-3
            div.row.title
                b #{surname} #{name}
            div.row.about-person
                b О персоне
            div.row
                div.col-1-2-b
                    b Дата рождения
                div.col-1-2-s
                    b #{date_of_birth}
            div.row
                div.col-1-2-b
                    b Рост
                div.col-1-2-s
                    b #{height}м
            div.row
                div.col-1-2-b
                    b Жанры
                div.col-1-2-s
                    each val in genres
                        b=val.slice(1, val.length-1)+' '
            div.row
                div.col-1-2-b
                    b Подробнее
                div.col-1-2-s
                    b #{description}
