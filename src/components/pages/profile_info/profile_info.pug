div(class="films-container")
    h1(class="selection-profile") Профиль

    div(class="block-left")
        div(class="contentAvatar")
            div(class="prof_pic")
                img(src=avatar class="avatar")
            i(id="settings_btn" class="settings_btn")
                img(src="settings.ico" class="set")
    div(class="block-right")
        div(class="profile-grid")
            div(class="col-grid-profile")
                div(class="grey-info-profile")
                    div Имя пользователя:
                    span(class="pug-text-profile") #{login}

                div(class="grey-info-profile")
                    div О себе:
                    span(class="pug-text-profile") #{about}

